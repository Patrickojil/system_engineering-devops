#!/usr/bin/env bash
# This script displays "To infinity and beyond" indefinitely and handles SIGTERM

# Trap SIGTERM signal to print message instead of terminating
trap 'echo "I am invincible!!!"' TERM

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
# Copy from 6-stop_me_if_you_can or create new
cp 6-stop_me_if_you_can 67-stop_me_if_you_can

# Or create directly
nano 67-stop_me_if_you_can

