#!/usr/bin/env bash
# This script displays "To infinity and beyond" indefinitely and handles SIGTERM

# Trap signals
trap 'echo "I am invincible!!!"' TERM
trap 'echo ""; exit 0' INT  # Handle Ctrl+C gracefully

echo "Running 7-highlander (Press Ctrl+C to stop)"
echo ""

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
