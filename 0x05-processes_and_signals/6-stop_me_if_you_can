#!/usr/bin/env bash
# This script stops the 4-to_infinity_and_beyond process without using kill/killall

# Find the PID of the process
pid=$(pgrep -f "4-to_infinity_and_beyond")

# Send SIGTERM signal using different methods
if [ -n "$pid" ]; then
    # Method 1: Using the shell's built-in
    # Send signal 15 (SIGTERM) using printf and /proc
    printf "" > /proc/"$pid"/fd/0 2>/dev/null
    
    # Method 2: Alternative using /proc interface
    echo "1" > /proc/"$pid"/fd/0 2>/dev/null
    
    # Method 3: Force close by sending EOF
    : > /proc/"$pid"/fd/0 2>/dev/null
fi
