#!/usr/bin/env bash
# This script stops the 4-to_infinity_and_beyond process without using kill/killall

# Find the PID
pid=$(pgrep -f "4-to_infinity_and_beyond")

if [ -n "$pid" ]; then
    # Send SIGTERM using Bash's built-in kill (different from /bin/kill)
    # Note: This is Bash's built-in, not the external kill command
    builtin kill -TERM "$pid" 2>/dev/null
fi
